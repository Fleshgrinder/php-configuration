# This is the top-most .editorconfig file; do not search in parent directories.
root                        = true

# All files.
[*]
charset                     = UTF-8
end_of_line                 = LF
indent_size                 = 4
indent_style                = space
insert_final_newline        = true
tab_width                   = 4
trim_trailing_whitespace    = true

[*.md]
trim_trailing_whitespace    = false

[{M,m}akefile]
indent_style                = tab
